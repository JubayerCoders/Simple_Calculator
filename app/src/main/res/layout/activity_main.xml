<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ebf3ff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/dark_light_bg"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/dark_mode_pic"
                android:layout_marginRight="@dimen/_5sdp"
                />

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/light_mode_pic"
                android:layout_marginLeft="@dimen/_5sdp"
                />




        </LinearLayout>

        <TextView
            android:id="@+id/input_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@null"
            android:fontFamily="@font/cal_font"
            android:textSize="@dimen/_25ssp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginLeft="@dimen/_15sdp"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/result_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cal_font"
            android:textSize="@dimen/_40ssp"
            android:layout_gravity="right"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_115sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="right"
            android:text=""
            android:layout_marginLeft="@dimen/_15ssp"
            />




        <!--    Button Desgin For Calculate  -->
        <LinearLayout
            android:id="@+id/btn_row"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_70sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_ac"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="AC"
                android:gravity="center"
                android:textSize="@dimen/_23ssp"
                android:textColor="#EC3232"
                />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_parcent"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="%"
                android:gravity="center"
                android:textSize="@dimen/_25ssp"
                android:textColor="#032AFF"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_divison"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="÷"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="#032AFF"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btn_delete"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:neumorph_shapeType="flat"
                    android:gravity="center"
                    android:textSize="@dimen/_28ssp"
                    android:textColor="#032AFF"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    />


            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_seven"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="7"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_eight"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="8"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_nine"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="9"
                android:gravity="center"
                android:textSize="39dp"
                android:textColor="@color/black"
                />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_mul"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="×"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="#032AFF"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_four"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="4"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_five"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="5"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_six"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="6"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_minus"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="−"
                android:gravity="center"
                android:textSize="@dimen/_32ssp"
                android:textColor="#032AFF"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_one"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_two"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="2"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_three"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="3"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_plus"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="+"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="#032AFF"
                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <soup.neumorphism.NeumorphButton
                android:visibility="gone"
                android:id="@+id/btn_C"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="C"
                android:gravity="center"
                android:textSize="@dimen/_26ssp"
                android:textColor="#EC3232"
                />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_zero"
                android:layout_width="@dimen/_142sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="0"
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_dot"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="•"
                android:gravity="center"
                android:textSize="@dimen/_30sdp"
                android:textColor="@color/black"
                />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btn_equal"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:neumorph_shapeType="flat"
                android:text="="
                android:gravity="center"
                android:textSize="@dimen/_28ssp"
                android:textColor="#EC3232"
                />





        </LinearLayout>



    </LinearLayout>








</RelativeLayout>